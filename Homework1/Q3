import java.io.*;
import java.util.LinkedList;

/**
 * DataAnalyzer class to compute statistics (min, max, and average) from a list of integers.
 */
public class DataAnalyzer {
    private final LinkedList<Integer> numList;

    /**
     * Constructor to initialize DataAnalyzer with a list of integers.
     *
     * @param numList The list of integers to analyze.
     */
    public DataAnalyzer(LinkedList<Integer> numList) {
        this.numList = numList;
    }

    /**
     * Computes the minimum value in the list.
     *
     * @return The minimum value.
     */
    public int min() {
        if (numList.isEmpty()) {
            throw new IllegalStateException("The list is empty.");
        }
        int min = numList.getFirst();
        for (int num : numList) {
            if (num < min) {
                min = num;
            }
        }
        return min;
    }

    /**
     * Computes the maximum value in the list.
     *
     * @return The maximum value.
     */
    public int max() {
        if (numList.isEmpty()) {
            throw new IllegalStateException("The list is empty.");
        }
        int max = numList.getFirst();
        for (int num : numList) {
            if (num > max) {
                max = num;
            }
        }
        return max;
    }

    /**
     * Computes the average value of the list.
     *
     * @return The average value.
     */
    public double average() {
        if (numList.isEmpty()) {
            throw new IllegalStateException("The list is empty.");
        }
        int sum = 0;
        for (int num : numList) {
            sum += num;
        }
        return (double) sum / numList.size();
    }
}
import java.io.*;
import java.util.LinkedList;
import java.util.Scanner;

/**
 * DataAnalyzerTester class for testing DataAnalyzer.
 */
public class DataAnalyzerTester {
    public static void main(String[] args) {
        if (args.length != 1) {
            System.out.println("Usage: java DataAnalyzerTester <output_filename>");
            System.exit(1);
        }

        String outputFileName = args[0];
        LinkedList<Integer> numList = new LinkedList<>();
        Scanner scanner = new Scanner(System.in);

        // Read integers from the terminal and store them in numList
        System.out.println("Enter a sequence of integers (one per line, end with a non-integer input):");
        while (scanner.hasNextInt()) {
            numList.add(scanner.nextInt());
        }

        try (PrintWriter writer = new PrintWriter(new FileWriter(outputFileName))) {
            // Save the numbers to the specified file
            for (int num : numList) {
                writer.println(num);
            }

            // Create DataAnalyzer instance and compute statistics
            DataAnalyzer analyzer = new DataAnalyzer(numList);
            int min = analyzer.min();
            int max = analyzer.max();
            double average = analyzer.average();

            // Display statistics on the terminal
            System.out.println("Minimum: " + min);
            System.out.println("Maximum: " + max);
            System.out.println("Average: " + average);

            // Save statistics to the same file
            writer.println("Minimum: " + min);
            writer.println("Maximum: " + max);
            writer.println("Average: " + average);
        } catch (IOException e) {
            System.err.println("Error writing to the file: " + e.getMessage());
        }
    }
}
javac DataAnalyzer.java DataAnalyzerTester.java

java DataAnalyzerTester <output_filename>
